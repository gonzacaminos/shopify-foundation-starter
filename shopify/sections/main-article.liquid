<div class="c-container-padded">
  <h1 class="text-2xl md:text-3xl font-bold text-center mb-2 md:mb-4">
    {{ article.title }}
  </h1>

  <div class="text-gray-600 text-sm text-center mb-8 md:mb-16">
    {% if article.author %}{{ 'common.by' | t }} {{ article.user.name }} / {% endif %}{{ article.published_at | date: format: 'month_day_year' }}
  </div>

  {% if article.image %}
    <div class="mb-8 md:mb-12">
      {{ article | image_url: width: 750 | image_tag: class: 'w-full', loading: 'lazy', sizes: '(min-width: 640px) 750px,(min-width: 480px) 600px,450px' }}
    </div>
   
  {% endif %}

  <div>
    {{ article.content }}
  </div>
</div>