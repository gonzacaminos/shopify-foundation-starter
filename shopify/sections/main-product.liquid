{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<render-product-main v-slots="{variant}">${variant}</render-product-main>
<div class="c-container-padded grid md:grid-cols-2 gap-8">
  <renderless-product-gallery v-slot="{ currentImage, switchImage }" initial="{{product.featured_image.id}}">
    <div>
      <div>
      {% for image in product.images %}
          <img
          id="{{image.id}}"
          src="{{ image | img_url: '750x' }}"
          alt="{{ image.alt | escape }}"
          loading="lazy"
          class="w-full h-auto object-cover object-center glightbox" v-show="currentImage == {{ image.id }}" {%  unless forloop.first%}  v-cloak {% endunless %}> 
      {% endfor %}       
        
      </div>

      {% if true %}
        <div class="flex gap-4 mt-4 ">
          {% for image in product.images %}

            <button
              class="w-20 md:w-24 h-20 md:h-24"
              @click="switchImage({{image.id}})"
            >
              <img
                sizes="
                  (min-width: 768px) 96px,
                  80px
                "
                srcset="
                  {{ image.src | img_url: '80x' }} 80w,
                  {{ image.src | img_url: '96x' }} 96w
                "
                src="{{ image.src | img_url: '96x' }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                class="w-full h-full object-cover object-center pointer-events-none"
              >
            </button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </renderless-product-gallery>

  <div class="md:mt-12">
    {% if product.title %}
      <h1 class="heading heading-subtitle mb-4 md:mb-8">
        {{ product.title }}
      </h1>
    {% endif %}

    {% if current_variant.available %}
      <div class="mb-10">
        <div class="flex gap-3">
          <span class="inline-block text-subtitle font-bold {% if current_variant.compare_at_price %}text-black{% endif %}">
            {{ current_variant.price | money }}
          </span>

          {% if current_variant.compare_at_price %}
            <del class="text-subtitle text-gray-550 font-light">
              {{ current_variant.compare_at_price | money }}
            </del>

          {% endif %}
        </div>

        <div class="text-gray-600 text-sm">
          {% if shop.taxes_included %}
            {{ 'common.including_tax' | t }}
          {% else %}
            {{ 'common.excluding_tax' | t }}
          {% endif %}
        </div>
      </div>
    {% else %}
      <div class="mb-6">
        {{ 'common.sold_out' | t }}
      </div>
    {% endif %}

    {% form 'product', product %}
      <div class="mb-6">
        {% if current_variant.available %}
          <input
            type="number"
            name="quantity"
            value="1"
            min="1"
            pattern="[0-9]*"
            class="w-16 mb-12"
          >
        {% endif %}

        {% if product.has_only_default_variant %}
          <input
            name="id"
            type="hidden"
            :value="{{ current_variant.id }}"
            readonly
          >
        {% else %}
          <div class="flex-1">
            <renderless-product-variant-selector
              v-slot="{ selectedVariant, selectOption }"
              :current-variant="{{ current_variant | json | replace: '"', "'" }}"
              :product-options="{{ product.options_with_values | json | replace: '"', "'" }}"
              :product-variants="{{ product.variants | json | replace: '"', "'" }}"
            >
              <div>
                <input
                  name="id"
                  type="hidden"
                  :value="selectedVariant.id"
                  readonly
                >

                <div class="flex gap-x-3">
                  {% for option in product.options_with_values %}
                    <div class="flex-1">
                      <label class="block mb-2" for="product-select-option-{{ forloop.index }}">
                        {{ option.name | escape }}
                      </label>

                      <select
                        id="product-select-{{ forloop.index }}"
                        class="w-full border p-2"
                        @change="selectOption({
                          name: '{{ option.name }}'
                        }, $event)"
                      >
                        {% for value in option.values %}
                          <option
                            value="{{ value }}"
                            {% if option.selected_value == value %}selected{% endif %}
                          >
                            {{ value | escape }}
                          </option>
                        {% endfor %}
                      </select>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </renderless-product-variant-selector>
          </div>
        {% endif %}
      </div>

      {% if current_variant.available %}
        <div class="grid grid-cols-2 gap-4">
          {% if section.settings.buy_button %}
          <div class="button-shopify-buy-it-now">
            {{ form | payment_button }}
          </div>

          {% endif %}
          <div>
            <button name="add" class="button button-primary w-full">
              {{ 'action.add_to_cart' | t }}
            </button>
          </div>
        </div>
      {% endif %}
    {% endform %}

    {% if product.description %}
      <div class="mt-4">
        {{ product.description }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Product",
    "class": "main-product-template pb-20",
    "settings": [
      {
        "type": "checkbox",
        "label": "Show Buy now button",
        "id": "buy_button"
      }
    ]
  }
  {% endschema %}