        </div>
        <!--end go cart drawer close-->

        <!--go cart drawer content-->
        <div class="go-cart-drawer__content js-go-cart-drawer-content">

        </div>
        <!--end go cart drawer content-->

        {% if section.settings.enable_upsells %}
            {% render 'upsells', items: cart.items, section: section %}
        {% endif %}

        <!--go cart drawer subtotal-->
        <div class="go-cart-drawer__subtotal">
            <span>Subtotal: </span>
            <span class="go-cart-drawer__subtotal-price js-go-cart-drawer-subtotal"></span>
        </div>
        <!--end go cart drawer subtotal-->

        <!--go cart drawer buttons-->
        <div class="go-cart-drawer__footer js-go-cart-drawer-footer">

            <a href="/checkout/" class="go-cart__button">
               {{ section.settings.checkout_button_label }}
            </a>

        </div>
        <!--end go cart drawer buttons-->

    </div>

</div>
<!--end go cart drawer-->

<!--go cart overlay-->
<div class="go-cart__overlay js-go-cart-overlay">
</div>
<!--end go cart overlay-->

{% schema %}
{
  "name": "Cart Drawer",
  "settings": [
    {
      "type": "text",
      "label": "Cart title",
      "id": "cart_heading",
      "default": "Your cart"
    },
    {
      "type": "checkbox",
      "label": "Enable upsells",
      "id": "enable_upsells",
      "default": true
    },
    {
      "type": "text",
      "label": "Upsells title",
      "id": "upsells_title",
      "placeholder": "Upsells title",
      "default": "How about these?"
    },
    {
      "type": "range",
      "label": "Max upsells to show",
      "id": "max_upsell_items",
      "step": 1,
      "min": 2,
      "max": 10,
      "unit": "it",
      "default": 6
    },
    {
      "type": "range",
      "label": "Max upsells to show per collection",
      "id": "max_upsell_per_collection",
      "min": 2,
      "max": 6,
      "step": 1,
      "unit": "it",
      "default": 3
    },
    {
      "type": "text",
      "label": "Checkout button label",
      "id": "checkout_button_label",
      "placeholder": "Checkout button label",
      "default": "Checkout"
    },
    {
      "type": "collection",
      "id": "collection_featured",
      "label": "Collection to use as upsell",
      "info": "If this is empty the products will be related to the products in cart"
    }
  ]
}
{% endschema %}