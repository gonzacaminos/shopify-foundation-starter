<section class="c-container mt-8">
    {% if section.settings.headline != blank %}
        <h2 class="px-2 md:px-0 mb-16 font-normal">{{section.settings.headline}}</h2>
    {% endif %}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 wide:gap-8 py-4">
        {% for block in section.blocks %}
            {% if block.settings.column_url != blank %}
                <a href="{{block.settings.column_button_url}}">
                {% else %}
                <div>
            {% endif %}
                {% render 'image-element', image: block.settings.column_image %}
                <p class="mb-2.5 mt-9">{{block.settings.column_title}}</p>
                <div class="mb-6">{{block.settings.column_text}}</div>
            {% if block.settings.column_url != blank %}
                </a>
                {% else %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

{% schema %}
{
    "name": "Columns with image",
    "class": "columns-with-image",
    "settings": [
        {
            "type": "text",
            "id": "headline",
            "label": "t:common.headline",
            "default": "Title here"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Column",
            "limit": 3,
            "settings": [
                {
                    "type": "url",
                    "id": "column_url",
                    "label": "Column url"
                },
                {
                    "type": "image_picker",
                    "id": "column_image",
                    "label": "Column image"
                },
                {
                    "type": "text",
                    "id": "column_title",
                    "label": "Column title"
                },
                {
                    "type": "textarea",
                    "id": "column_text",
                    "label": "t:common.text"
                }
            ]
        }
    ],
  "presets": [
    {
      "name": "Columns with image",
      "category": "Image"
    }
  ]
}
{% endschema %}