<!doctype html>
<html lang="{{ request.locale.iso_code }}" class="overflow-y-scroll overflow-x-hidden">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>
    <link
      rel="preload"
      href="{{ 'bundle.css' | asset_url }}"
      as="style">
    <link
      rel="preload"
      href="{{ 'bundle.js' | asset_url }}"
      as="script">

    <title>{{ page_title | escape }}</title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% if canonical_url != blank %}
      <link rel="canonical" href="{{ canonical_url }}">
    {% endif %}

    {{ 'bundle.css' | asset_url | stylesheet_tag }}

    <!-- header hook for Shopify plugins -->
    {{ content_for_header }}
  </head>

  <body class="min-h-screen page-{{request.page_type}}">
    <div id="app" class="min-h-screen flex flex-col font-sans">
      {% section 'layout-announcement-bar' %}
      {% section 'layout-header' %}

      <main
        id="main"
        role="main"
        class="flex-1 {% if request.page_type == 'index' or  request.page_type == 'collection'%}md:pt-0{% else %}md:pt-20{% endif %}">
        {{ content_for_layout }}
      </main>

      {% section 'layout-footer' %}

    </div>

    <!-- webpack bundle -->
    <script src="{{ 'bundle.js' | asset_url }}" defer="defer"></script>
    {%- section 'go-cart' -%}
  </body>
</html>