<div class="{{ class | default: '' }}" style="{{ style | default: '' }}">
  <a href="{{ product.url | within: collection }}" class="block relative">
    {% if product.featured_image %}
       {{ product.featured_image | image_url: width: 630 | image_tag: class: 'w-full h-80 sm:h-64 xl:h-80 2xl:max-h-96 object-cover object-center', loading: 'lazy', sizes: '(max-width: 768px) 450px, 630px' }}
    {% endif %}
    
    {% if product.compare_at_price %}
      <div class="bg-red-500 text-white text-sm tracking-wider uppercase absolute top-0 left-0 px-2 py-1">
        {{ 'common.sale' | t }}
      </div>
    {% endif %}
  </a>

  <div class="mt-4">
    {% if product.title %}
      <a href="{{ product.url | within: collection }}" class="text-lg font-bold">
        {{ product.title }}
      </a>
    {% endif %}

    {% if product.available %}
      <div>
        <span class="{% if product.compare_at_price %}text-red-500{% endif %}">
          {{ product.price | money }}
        </span>

        {% if product.compare_at_price %}
          <del class="ml-2">
            {{ product.compare_at_price | money }}
          </del>
        {% endif %}
      </div>
    {% else %}
      <div>
        {{ 'common.sold_out' | t }}
      </div>
    {% endif %}
  </div>
</div>